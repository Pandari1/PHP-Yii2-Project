{
    "name": "your/yii2-app",
    "description": "Yii2 Sample Application",
    "type": "project",
    "require": {
        "php": "^8.1",
        "yiisoft/yii2": "^2.0.49",
        "bower-asset/jquery": "^3.7.0",
        "bower-asset/bootstrap": "^5.3.0"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "^2.1.23",
        "yiisoft/yii2-gii": "^2.2.6",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "platform": {
            "php": "8.1.0"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        },
        "optimize-autoloader": true
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "app\\": "src/"
        }
    }
}
